@using System.Web
@using SharpLessons
@inherits RazorEngine.Templating.TemplateBase<SharpLessons.CoursePageModel>
<!DOCTYPE html>

<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
	<meta charset="utf-8" />
	<title>
		@Model.CourseName
	</title>
	<link rel="stylesheet" href="@Urls.Resolve("~/Content/bootstrap.min.css")">
	<link rel="stylesheet" href="@Urls.Resolve("~/Content/codemirror.css")">
	<link rel="stylesheet" href="@Urls.Resolve("~/Content/cobalt.css")">
	<link rel="stylesheet" href="@Urls.Resolve("~/Content/lessons.css")">
</head>
<body class="slide-@Model.SlideClass">
	<div class="course-header">
		<div class="container">
			<div class="row">
				<h1>@Model.CourseName</h1>
			</div>
		</div>
	</div>
	<div class="container">
		<div class="row">
			@Include("slide", Model.Slide)
		</div>
		<div class="row">
			<div class="slide-nav">
				@if (Model.PrevSlideId != null)
				{
					<a id="PrevLink" class="slide-nav-link" href="@(Model.PrevSlideId).slide.html">← Ctrl</a>
				}
				@if (Model.NextSlideId != null)
				{
					<a id="NextLink" class="slide-nav-link" href="@(Model.NextSlideId).slide.html">Ctrl →</a>
				}
			</div>
		</div>
	</div>
	<script src="@Urls.Resolve("~/Scripts/jquery-1.9.0.min.js")"></script>
	<script src="@Urls.Resolve("~/Scripts/bootstrap.min.js")"></script>
	<script src="@Urls.Resolve("~/Scripts/codemirror.js")"></script>
	<script src="@Urls.Resolve("~/Scripts/clike.js")"></script>
	<script src="@Urls.Resolve("~/Scripts/navigate.js")"></script>
	<script>
		function codeMirrorClass(c, theme) {
			var codes = document.getElementsByClassName(c);
			for (var i = 0; i < codes.length; i++)
				CodeMirror.fromTextArea(codes[i],
				{
					mode: "text/x-csharp",
					lineNumbers: true,
					theme: theme,
					indentWithTabs: true,
					tabSize: 4,
					indentUnit: 4,
				});
		}

		codeMirrorClass("code-exercise", "cobalt");
		codeMirrorClass("code-sample", "default");
	</script>
</body>
</html>