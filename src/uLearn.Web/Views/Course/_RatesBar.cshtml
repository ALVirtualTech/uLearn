@model uLearn.CoursePageModel
<form id="marksButtons" style="margin-top: 10px;">
	<div id="ratesBar" data-url="@Url.Action("ApplyRate", new{ courseId = Model.Course.Id, slideId = Model.Slide.Id})"></div>
    <input id="good" type="radio" name="marks" value="good" onclick="handleRate('Good')">Хорошо
	<input id="notunderstand" type="radio" name="marks" value="notunderstand" onclick="handleRate('NotUnderstand')">Не понял
	<input id="trivial" type="radio" name="marks" value="trivial" onclick="handleRate('Trivial')">Тривиально
	<input id="notwatched" type="radio" name="marks" value="not_watched" onclick="handleRate('NotWatched')" checked>Не смотрел
</form>
<script src="~/Scripts/slide-stats.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script> FillRate('@Model.Rate')</script>