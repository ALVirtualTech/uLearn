@model uLearn.CoursePageModel
<form class="rate-buttons">
	@{
		var courseId = Model.Course.Id;
		//var unitName = Model.Course.Slides[Model.SlideIndex].Info.UnitName;
		var slideId = Model.Slide.Id;
		const string good = "Good";
		const string notUnderstand = "NotUnderstand";
		const string trivial = "Trivial";
		const string notWatched = "NotWatched";
	}
	Оцените материал:
	<div class="btn-group" data-toggle="buttons">
		<label class="btn btn-default active">
			<input id="notwatched" type="radio" name="marks" value="not_watched" onclick="handleMark()" checked data-url="@Url.Action("ApplyMark", new{courseId = courseId, slideId = slideId, rate=notWatched})">
			Ещё не смотрел
		</label>
		<label class="btn btn-default btn-hover" data-hover-class="btn-success">
			<input id="good" type="radio" name="marks" value="good" onclick="handleMark()" data-url="@Url.Action("ApplyMark", new{ courseId = courseId, slideId = slideId, rate=good})">
			Хорошо
		</label>
		<label class="btn btn-default btn-hover" data-hover-class="btn-danger">
			<input id="notunderstand" type="radio" name="marks" value="notunderstand" onclick="handleMark()" data-url="@Url.Action("ApplyMark", new{courseId = courseId, slideId = slideId, rate=notUnderstand})">
			Непонятно
		</label>
		<label class="btn btn-default btn-hover" data-hover-class="btn-info">
			<input id="trivial" type="radio" name="marks" value="trivial" onclick="handleMark()" data-url="@Url.Action("ApplyMark", new{courseId = courseId, slideId = slideId, rate=trivial})">
			Тривиально
		</label>
	</div>
	<div class="clearfix"></div>
</form>

<div id="finder" data-url="@Url.Action("GetMark", new{courseId, slideId})"></div>
