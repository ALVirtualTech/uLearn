@model uLearn.CoursePageModel

<div id="nav_arrows" data-hasnext="@(Model.HasNextSlide?"true":"")" data-hasprev="@(Model.HasPrevSlide?"true":"")">
	<a class="nav-arrow nav-left" id="prev_slide_button" href="@Url.Action("Slide", new {courseId = Model.Course.Id, slideIndex = Model.PrevSlideIndex})"><i class="glyphicon glyphicon-chevron-left"></i></a>
	<a class="nav-arrow nav-right" id="next_slide_button" href="@Url.Action("Slide", new {courseId = Model.Course.Id, slideIndex = Model.NextSlideIndex})"><i class="glyphicon glyphicon-chevron-right"></i></a>

	<a class="nav-arrow nav-right" id="next_solutions_button" href="@Url.Action("AcceptedSolutions", new { courseId = Model.Course.Id, slideIndex = Model.SlideIndex })"><i class="glyphicon glyphicon-chevron-right"></i></a>

	<span class="nav-arrow nav-left" id="no_prev_slide">Листалка тут → </span>
	<span class="nav-arrow nav-right" id="no_next_slide">Конец!</span>
</div>