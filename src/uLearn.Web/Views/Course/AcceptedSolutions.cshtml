@model uLearn.AcceptedSolutionsPageModel

@{
	ViewBag.Title = Model.CoursePageModel.Course.Title;
}
@Html.Partial("_Sidebar", Model.CoursePageModel)
<div class="slide-container">
	<div class="container body-content">
		<div class="row">
			<div id="LikeSolutionUrl" data-url="@Url.Action("LikeSolution")"></div>
			@foreach (AcceptedSolutionInfo solution in Model.AcceptedSolutions)
			{
				<textarea class='code code-sample'>@solution.Code</textarea>
				var counterId = "counter" + solution.Id;
				<button id="@counterId" class="like-button glyphicon glyphicon-thumbs-up" onclick="likeSolution(@solution.Id)">
					@solution.UsersWhoLike.Count
				</button>
			}
			@Html.Partial("_SlideNavigation", Model.CoursePageModel)
		</div>
	</div>
</div>
@section scripts{
	<script src="~/Scripts/navigate.js"></script>
	<script src="~/Scripts/slide.js"></script>
}
