@using System.Diagnostics
@model uLearn.AcceptedSolutionsPageModel

@{
    ViewBag.Title = Model.CoursePageModel.Course.Title;
}
@Html.Partial("_Sidebar", Model.CoursePageModel)
<div class="slide-container">
	<div class="container body-content">
		<div class="row">
			@foreach (AcceptedSolutionInfo solution in Model.AcceptedSolutions)
			{
			    <textarea class='code code-sample'>@solution.Code</textarea>
			    <button type="button" onclick="LikeSolution(@solution.Id)" class="btn btn-primary btn-lg no-rounds">Like!</button>
				<textarea class='code'>@solution.UsersWhoLike.Count</textarea>
			}
			@Html.Partial("_SlideNavigation", Model.CoursePageModel)
		</div>
	</div>
</div>
@section scripts{
    <script src="~/Scripts/navigate.js"></script>
    <script src="~/Scripts/slide.js"></script>
    <script>
		var likeSolutionUrl = "@Html.Raw(Url.Action("LikeSolution"))";
    </script>
	@if (Model.CoursePageModel.HasNextSlide)
	{
		<script>
		    var $endHere = $("#EndHere");
		    $endHere.hide();
		</script>
	}
	else
	{
		<script>
		    var $nextLink = $("#NextLink");
		    $nextLink.hide();
		</script>
	}
	@if (Model.CoursePageModel.HasPrevSlide)
	{
		<script>
		    var $selectorHere = $("#SelectorHere");
		    $selectorHere.hide();
		</script>
	}
	else
	{
		<script>
		    var $prevLink = $("#PrevLink");
		    $prevLink.hide();
		</script>
	}
	<script>
	    var $showAnotherAnswer = $("#ShowAnotherAnswer");
	    $showAnotherAnswer.hide();
	</script>

}
