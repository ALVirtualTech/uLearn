@model uLearn.AcceptedSolutionsPageModel

@{
	ViewBag.Title = Model.CoursePageModel.Course.Title;
}
@Html.Partial("_Sidebar", Model.CoursePageModel)
<div class="slide-container">
	<div class="container body-content">
		<div class="row">
			<div id="LikeSolutionUrl" data-url="@Url.Action("LikeSolution")"></div>
			@foreach (AcceptedSolutionInfo solution in Model.AcceptedSolutions)
			{
				var id = "solution_" + solution.Id;
				<div id="@id">
					<textarea class='code code-sample'>@solution.Code</textarea>

					<button class="btn @(solution.LikedAlready ? "btn-primary" : "btn-default") like-button" onclick="likeSolution(@solution.Id)">
						<i class="glyphicon glyphicon-thumbs-up"></i>
						<span class="likes-counter">@solution.UsersWhoLike.Count</span>
					</button>
				</div>
			}
			@Html.Partial("_SlideNavigation", Model.CoursePageModel)
		</div>
	</div>
</div>
@section scripts{
	@Scripts.Render("~/slide-js")
}
