@using uLearn.Web.Models
@helper SwitchablePanel(string idPrefix, params SwitchablePanelModel[] switches)
{
	if (string.IsNullOrWhiteSpace(idPrefix))
	{
		 idPrefix = "sw-panel-" + Guid.NewGuid();
	}
	<div>
		<div class="btn-group">
			@for (var i = 0; i < switches.Length; ++i)
			{
				<button type="button" class="btn btn-default @(i == 0 ? "btn-primary" : "")" onclick=" ShowPanel(event)" data-div-id="@idPrefix-@i">@switches[i].Name</button>
			}
		</div>
		@for (var i = 0; i < switches.Length; ++i)
		{
			<div id="@idPrefix-@i" class="statistic-container @(i == 0 ? "load-content" : "")" data-url="@switches[i].Url"></div>
		}
	</div>
}